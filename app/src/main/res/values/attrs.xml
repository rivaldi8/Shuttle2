<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="tabLayoutStyle" format="reference" />

    <declare-styleable name="HomeButton">
        <attr name="type" format="enum">
            <enum name="history" value="0" />
            <enum name="recent" value="1" />
            <enum name="favorites" value="2" />
            <enum name="shuffle" value="3" />
        </attr>
    </declare-styleable>

    <attr name="seekDirection" format="enum">
        <enum name="forward" value="0" />
        <enum name="backward" value="1" />
    </attr>

    <attr name="seekAmount" format="integer" />

    <declare-styleable name="SeekButton">
        <attr name="seekDirection" />
        <attr name="seekAmount" />
    </declare-styleable>

    <declare-styleable name="SkipButton">
        <attr name="seekDirection" />
        <attr name="seekAmount" />
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="android:textColor" format="color|reference" />
        <attr name="android:background" format="color|reference" />
        <attr name="android:fontFamily" format="reference" />
        <attr name="android:textSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="PlayPauseView">
        <attr name="android:tint" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="PlayPauseLoadView">
        <attr name="android:tint" format="color|reference" />
    </declare-styleable>

</resources>